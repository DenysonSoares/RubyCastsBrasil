    <div class="row">
      <div class="content-buttons">
      <% if user_signed_in? %>
        <%= link_to "Screencasts",screencasts_url, class: "bt-screencasts-list" %>
      <% else %>
        <%= link_to "Entrar com GitHub",user_omniauth_authorize_path("github"), class: "bt-github" %>
