<div class="col-sm-6 col-md-offset-3">
  <div class="page-header">
    <h2><%= t('.forgot_your_password', :default => 'Forgot your password?') %></h2>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), method: :post) do |f| %> 
      <%= f.input :email %>

      <%= f.button :submit, t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), class: 'btn-primary pull-right' %>
  <% end %>
  <br class="clearfix" />

  <%= render "devise/shared/links" %>
</div>